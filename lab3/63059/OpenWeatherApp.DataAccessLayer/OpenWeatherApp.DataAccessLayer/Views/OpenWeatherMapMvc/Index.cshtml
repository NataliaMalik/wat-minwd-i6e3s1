
@model OpenWeatherApp.DataAccessLayer.Models.OpenWeatherMap
<style>
    .body-content {
        width: 960px;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        text-align: center;
        margin-bottom: 40px;
    }

    #apiDiv form {
        width: 760px;
        margin: auto;
    }

        #apiDiv form .cities {
            display: inline-block;
            width: 250px;
            text-align: center;
            background-color: #E5E4E2;
            margin-bottom: 4px;
            line-height: 22px;
            border-radius: 10px;
        }

        #apiDiv form span {
            display: inline-block;
            margin: 10px 0px;
        }

    .buttons {
        text-align: center;
    }

    button {
        margin: 10px 5px;
    }

    table {
        border-collapse: collapse;
        margin-left: 265px;
        margin-top: 20px;
    }

    td {
        border: 1px solid black;
    }

    tbody {
        width: 400px;
    }

    th {
        padding-bottom: 5px;
    }

    td {
        width: 200px;
        height: 40px;
        text-align: center;
        background-color: #E5E4E2;
    }
    #reset {
        margin-left: 433px;
    }
</style>
<h1>OpenWeatherMap API</h1>
@using (Html.BeginForm())
{<button id="reset" name="reset">Reset »</button>}
<div id="apiDiv">
    <h4>Select the City for Weather Report</h4>
    @using (Html.BeginForm())
    {
        foreach (var city in Model.cities)
        {
            <div class="cities">
                <span>
                    @Html.RadioButtonFor(m => m.cities, city.Value) @city.Key
                </span>
            </div>
        }
        <div class="buttons">
            <button name="submit">Submit</button>

        </div>
    }
    <div id="message">@(new Microsoft.AspNetCore.Html.HtmlString(Model.apiResponse))</div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("input[id='cities']").change(function () {
            $(this).parents("#apiDiv").find
                ("span").css("background", "none");
            $(this).parent().css("background", "none");
        });
    });
</script>
